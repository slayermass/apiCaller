{
  "name": "@slayermass/api-caller",
  "version": "1.0.0",
  "type": "module",
  "types": "dist/types/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "buildBrowser": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=browser && npm run postReplacer",
    "buildNode": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=node && npm run postReplacer",
    "postReplacer": "node postReplacer.js",
    "test": "jest --runInBand",
    "build:types": "tsc -p .\\tsconfig.types.json"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": ["dist"],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.9",
    "esbuild": "^0.25.8",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.3.1",
    "react": "^19.1.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.2.2"
  }
}
